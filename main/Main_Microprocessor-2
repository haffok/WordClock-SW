#include <Utils.h>
#include <DCF77.h>
#include <Time.h>
using namespace Utils;
#define DCF_PIN 2             // Connection pin to DCF 77 device
#define DCF_INTERRUPT 0         // Interrupt number associated with pin
time_t time;
DCF77 DCF = DCF77(DCF_PIN,DCF_INTERRUPT); 

void setup() {
  

}//end method; void setup

void loop() {
  
  time_t DCFtime = DCF.getTime(); 
  
  //create Matrix
  void cMatrix(time_t time){
    ledString[[9],[10]]; //Array [0-10],[0-9]
    
    //Second-Mode
    if (modeSc == true){
    
    Switch (second()){
      case 0:
        setTenZERO(); //First number
        setSglZERO(); //Second number
        
        
    }//end switch-case
      }//end if
      
    //Hour-Mode
    else if (modeHr == true) {
      
      //set "ES IST"
      setESIST();
      
      if (minute() < 5){

        //sets "UHR"
        setUHR();
        if (tm.hour == 1){
          setHrEINS();
          }//end if
        else {
        setHour(tm.hour());
        }//end else
        
        //xx:05
      else if (minute() < 10){
        setHour(tm.hour());
        setMinFUNF();
        setNACH();
        }//end else if
        
        //xx:10
      else if (minute() < 15){
        setHour(tm.hour());
        setMinZEHN();
        setNACH();
        }//end else if
        
        //xx:15
      else if (minute() < 20){
        setHour(tm.hour());
        setVIERTEL();
        setNACH();
        }//end else if
        
        //xx:20
      else if (minute() < 25){
        setHour(tm.hour() - 1);
        setMinZEHN();
        setVOR();
        }//end else if
        
        //xx:25
       else if (minute() < 30){
        setHour(tm.hour() - 1);
        setMinFUNF();
        setVOR();
        }//end else if
        
        //xx:30
       else if (minute() < 35){
        setHour(tm.hour() - 1);
        setHALB();
        }//end else if
        
        //xx:35
       else if (minute() < 40){
        setHour(tm.hour() - 1);
        setMinFUNF();
        setNACH();
        setHALB();
        }//end else if
        
        //xx:40
       else if (minute() < 45){
        setHour(tm.hour() - 1);
        setZEHN();
        setNACH();
        setHALB();
        }//end else if
        
        //xx:45
       else if (minute() < 50){
        setHour(tm.hour() - 1);
        setDREIVIERTEL();
        }//end else if
        
        //xx:50
      else if (minute() < 55){
        setHour(tm.hour() - 1);
        setMinZEHN();
        setVOR();
      }//end else if
      
        //xx:55
       else if (minute() < 60){
        setHour(tm.hour() - 1);
        setMinFUNF();
        setVOR();
        }//end else if
        
}//end else if

      
    //Temperature-Mode
    else if (modeTr == true) {
      }//end else if
    
    
    
    
    
    }//end method cmatrix

  
  void setHour(int printHr){
    switch (printHr){
      case 0: 
        setHrZWOLF();
        break;
       case 1:
        setHrEINS();
         break;
       case 2:
        setHrZWEI();
        break;
       case 3:
        setHrDREI();
        break;        
       case 4:
        setHrVIER();
        break;        
       case 5:
        setHrFUNF();
        break;
       case 6:
        setHrSECHS();
        break;
       case 7:
        setHrSIEBEN();
        break;
       case 8:
        setHrACHT();
        break;
       case 9:
        setHrNEUN();
        break;       
       case 10:
        setHrZEHN();
       case 11:
        setHrELF();
        break;
       case 12: 
        setHrZWOLF();
        break;
       case 13:
        setHrEINS();
         break;
       case 14:
        setHrZWEI();
        break;
       case 15:
        setHrDREI();
        break;        
       case 16:
        setHrVIER();
        break;        
       case 17:
        setHrFUNF();
        break;
       case 18:
        setHrSECHS();
        break;
       case 19:
        setHrSIEBEN();
        break;
       case 20:
        setHrACHT();
        break;
       case 21:
        setHrNEUN();
        break;       
       case 23:
        setHrZEHN();
       case 23:
        setHrELF();
        break;
       case 24: 
        setHrZWOLF();
        break;
     }//end switch 
  }//end method setHour
  
  void setMinute (int printMin){
    
    }//end method setMinute
    
//set LEDs  
    void setESIST (){
      ledString[[0],[0]] = 1;
      ledString[[0],[1]] = 1;
      ledString[[0],[2]] = 1;
      ledString[[0],[4]] = 1;
      ledString[[0],[5]] = 1;
    }//end method setESIST  
  void setVOR (){
      ledString[[3],[0]] = 1;
      ledString[[3],[1]] = 1;
      ledString[[3],[2]] = 1;
    }//end method setVOR
   void setNACH (){
        ledString[[3],[7]] = 1;
        ledString[[3],[8]] = 1;
        ledString[[3],[9]] = 1;
        ledString[[3],[10]] = 1;
    }//end method setNACH
   void setHALB (){
        ledString[[4],[0]] = 1;
        ledString[[4],[1]] = 1;
        ledString[[4],[2]] = 1;
        ledString[[4],[3]] = 1;
    }//end method setHALB
   void setUHR (){
        ledString[[9],[8]] = 1;
        ledString[[9],[9]] = 1;
        ledString[[9],[10]] = 1;
    }//end method setUHR
   void setVIERTEL(){
        ledString[[2],[4]] = 1;
        ledString[[2],[5]] = 1;
        ledString[[2],[6]] = 1;
        ledString[[2],[7]] = 1;
        ledString[[2],[8]] = 1;
        ledString[[2],[9]] = 1;
        ledString[[2],[10]] = 1;     
     }//end method setVIERTEL
    void setDREIVIERTEL (){
        setVIERTEL();
        ledString[[2],[0]] = 1;
        ledString[[2],[1]] = 1;
        ledString[[2],[2]] = 1;
    }//end method setDREIVIERTEL
   void setMinFUNF(){
        ledString[[0],[7]] = 1;
        ledString[[0],[8]] = 1;
        ledString[[0],[9]] = 1;
        ledString[[0],[10]] = 1;   
     }//end method setFUNF
   void setMinZEHN(){
        ledString[[1],[0]] = 1;
        ledString[[1],[1]] = 1;
        ledString[[1],[2]] = 1;
        ledString[[1],[3]] = 1;   
     }//end method setMinZEHN
   void setMinZWANZIG(){
        ledString[[1],[4]] = 1;
        ledString[[1],[5]] = 1;
        ledString[[1],[6]] = 1;
        ledString[[1],[7]] = 1;
        ledString[[1],[8]] = 1;
        ledString[[1],[9]] = 1;
        ledString[[1],[10]] = 1;     
     }//end method setMinZWANZIG
   void setHrEIN(){
        ledString[[5],[0]] = 1;
        ledString[[5],[1]] = 1;
        ledString[[5],[2]] = 1;
     }//end method setHrEIN
   void setHrEINS(){
       setHrEIN(); 
       ledString[[5],[3]] = 1;     
     }//end method setHrEINS     
   void setHrZWEI(){
        ledString[[5],[7]] = 1;
        ledString[[5],[8]] = 1;
        ledString[[5],[9]] = 1;
        ledString[[5],[10]] = 1;    
     }//end method setHrZWEI
        void setHrDREI(){
        ledString[[6],[0]] = 1;
        ledString[[6],[1]] = 1;
        ledString[[6],[2]] = 1;
        ledString[[6],[3]] = 1;   
     }//end method setHrDREI
        void setHrVIER(){
        ledString[[6],[7]] = 1;
        ledString[[6],[8]] = 1;
        ledString[[6],[9]] = 1;
        ledString[[6],[10]] = 1;    
     }//end method setHrVIER
        void setHrFUNF(){
        ledString[[4],[7]] = 1;
        ledString[[4],[8]] = 1;
        ledString[[4],[9]] = 1;
        ledString[[4],[10]] = 1;   
     }//end method setHrFUNF
        void setHrSECHS(){
        ledString[[7],[0]] = 1;
        ledString[[7],[1]] = 1;
        ledString[[7],[2]] = 1;
        ledString[[7],[3]] = 1;
        ledString[[7],[4]] = 1;
        ledString[[7],[5]] = 1;  
     }//end method setHrSECHS
        void setHrSIEBEN(){
        ledString[[8],[0]] = 1;
        ledString[[8],[1]] = 1;
        ledString[[8],[2]] = 1;
        ledString[[8],[3]] = 1;
        ledString[[8],[4]] = 1;
        ledString[[8],[5]] = 1;  
     }//end method setHrSIEBEN
        void setHrACHT(){
        ledString[[7],[7]] = 1;
        ledString[[7],[8]] = 1;
        ledString[[7],[9]] = 1;
        ledString[[7],[10]] = 1;   
     }//end method setHrACHT
        void setHrNEUN(){
        ledString[[9],[3]] = 1;
        ledString[[9],[4]] = 1;
        ledString[[9],[5]] = 1;
        ledString[[9],[6]] = 1;   
     }//end method setHrNEUN
        void setHrZEHN(){
        ledString[[9],[0]] = 1;
        ledString[[9],[1]] = 1;
        ledString[[9],[2]] = 1;
        ledString[[9],[3]] = 1;  
     }//end method setHrZEHN
        void setHrELF(){
        ledString[[4],[5]] = 1;
        ledString[[4],[6]] = 1;
        ledString[[4],[7]] = 1;  
     }//end method setHrELF
        void setHrZWOLF(){
        ledString[[8],[6]] = 1;
        ledString[[8],[7]] = 1;
        ledString[[8],[8]] = 1;
        ledString[[8],[9]] = 1;
        ledString[[8],[10]] = 1;  
     }//end method setHrZWOLF
     
}//end main method; void loop
